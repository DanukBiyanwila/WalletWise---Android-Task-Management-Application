<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/secondary"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="35dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="25dp"
            android:text="@string/welcome_walletwise"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/hom"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/tertiary"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="25dp"
            android:text="@string/our_main_services"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:id="@+id/addnewbutget"
            android:layout_marginTop="0dp"
            android:src="@drawable/addbutget" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:layout_marginTop="10dp"
            android:id="@+id/butgetdetails"
            android:src="@drawable/butgetdetails" />
    </LinearLayout>
</ScrollView>